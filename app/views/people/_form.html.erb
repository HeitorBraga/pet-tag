<%= simple_form_for(@person, url: person_registration_path) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <h1 class="title has-text-centered mt-3">Dados de Login</h1>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <h1 class="title has-text-centered mt-3">Dados</h1>
    <%= f.input :name %>
    <%= f.input :telephone, as: :string, input_html: { class: "phone" } %>
    <%= f.input :address %>
    <%= f.input :number %>
    <%= f.input :complement %>
    <%= f.input :district %>
    <%= f.input :zip, as: :string, input_html: { class: "zip" } %>
    <%= f.input :city %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "is-fullwidth is-info mt-4" %>
  </div>
<% end %>
