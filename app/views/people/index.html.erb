
<p id="notice"><%= notice %></p>

<h1 class='title has-text-centered' width>Dono</h1>

<table class='mt-6'>
  <thead>
    <tr class='table has-text-centered'>
      <th>Nome</th>
      <th>Telefone</th>
      <th>Endereço</th>
      <th>Número</th>
      <th>Complemento</th>
      <th>Bairro</th>
      <th>Cep</th>
      <th>Cidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr class='table has-text-centered'>
        <td><%= person.name %></td>
        <td><%= person.telephone %></td>
        <td><%= person.address %></td>
        <td><%= person.number %></td>
        <td><%= person.complement %></td>
        <td><%= person.district %></td>
        <td><%= person.zip %></td>
        <td><%= person.city %></td>
        <td><%= link_to 'Mostrar', person, class: "button is-info" %></td>
        <td><%= link_to 'Editar', edit_person_path(person), class: "button is-info" %></td>
        <td><%= link_to 'Excluir', person, method: :delete, data: { confirm: 'Tem certeza?' }, class: "button is-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar Dono', new_person_path, class: "button is-fullwidth is-info" %>
