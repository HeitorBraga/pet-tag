<p id="notice"><%= notice %></p>

<p>
<h1 class="title has-text-centered mb-5">Perfil</h1>
</p>

<div class="columns">

  <div class="column">

  </div>

  <div class="column has-text-left">

    <p class="mt-3"><h2>
      <strong>Nome:</strong>
      <%=  @person.name %>
    </p></h2>

    <p class="mt-3"><h2>
      <strong>Telefone:</strong>
      <%= @person.telephone %>
    </h2></p>

    <p class="mt-3"><h2>
      <strong>Email:</strong>
      <%= @person.email %>
    </h2></p>

    <h1 class="title mt-5 has-text-centered">Endereço</h1>

    <p class="mt-3"><h2>
      <strong>Endereço:</strong>
      <%= @person.address %>
    </h2></p>

    <p class="mt-3"><h2>
      <strong>Número:</strong>
      <%= @person.number %>
    </h2></p>

    <p class="mt-3"><h2>
      <strong>Complemento:</strong>
      <%= @person.complement %>
    </h2></p>

    <p class="mt-3"><h2>
    <strong>Bairro:</strong>
    <%= @person.district %>
    </h2></p>

    <p class="mt-3"><h2>
      <strong>Cep:</strong>
      <%= @person.zip %>
    </h2></p>

    <p class="mt-3"><h2>
      <strong>Cidade:</strong>
      <%= @person.city %>
    </h2></p>


    <div class="modal" id="modalTag">
      <div class="modal-background"></div>
      <div class="modal-card">  
        <header class="modal-card-head">
          <p class="modal-card-title has-text-centered title">Tag</p>
        </header>
        <p class="tag">
          <tbody>
            <% current_person.pet_registrations.each do |pet_tag| %>
              <tr class="has-text-centered">
                <td><%= pet_tag.name %></td>
              </tr>
            <% end %>
          </tbody>
        </p>
      </div>
      <button class="modal-close is-large" arial-label="close" onClick="toggleCartDlg()"></button>
    </div>

    <h1 class="title mt-5 has-text-centered">Pets</h1>

    <div class="box ">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p>
              <table>
                <thead class="has-text-centered">
                  <th>Código</th>
                  <th>Nome</th>
                  <th>Tipo</th>
                  <th>Raça</th>
                  <th width="174.7px"></th>
                </thead>
                <tbody>
                  <% current_person.pet_registrations.each do |pet| %>
                    <tr class="table has-text-centered">
                      <td><h4><%= pet.code %></td></h4>
                      <td><h4><%= pet.name %></td></h4>
                      <td><h4><%= pet.kind %></td></h4>
                      <td><h4><%= pet.breed %></td></h4>

                      <td>
                        <%= link_to edit_pet_registration_url(pet), class: "table-button" do %>
                          <%= fa_icon "pencil" %>
                        <% end %>
                        <%= link_to pet, class: "table-button" do %>
                          <%= fa_icon "eye" %>
                        <% end %>
                        <%= link_to pet_registration_path(pet), method: :delete, data: { confirm: "Tem certeza?" }, class: "table-button" do %>
                          <%= fa_icon "trash" %>
                        <% end %>
                         <%= link_to print_tag_pet_registration_path(pet), class: "table-button modal-button" do %>
                          <%= fa_icon "tag" %>
                        <% end %>
                    </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </p>
          </div>
        </div>
      </article>
  </div>
  <%= link_to "Cadastrar Amiguinho", new_pet_registration_url, class: "button is-info is-fullwidth" %>
  <%= link_to "Editar Perfil", edit_person_path(@person), class: "button is-info is-fullwidth mt-3" %>

  </div>

  <div class="column">

  </div>
</div




