<p id="notice"><%= notice %></p>

<p>
<h1 class="title has-text-centered mb-5">Perfil</h1>
</p>

<div class="columns">

  <div class="column">

  </div>

  <div class="column has-text-left">

    <p class="mt-3"><h2>
      <strong>Nome:</strong>
      <%=  @person.name %>
    </p></h2>

    <p class="mt-3"><h2>
      <strong>Telefone:</strong>
      <%= @person.telephone %>
    </h2></p>

    <h1 class="title mt-5 has-text-centered">Endereço</h1>

    <p class="mt-3"><h2>
      <strong>Endereço:</strong>
      <%= @person.address %>
    </h2></p>

    <p class="mt-3"><h2>
      <strong>Número:</strong>
      <%= @person.number %>
    </h2></p>

    <p class="mt-3"><h2>
      <strong>Complemento:</strong>
      <%= @person.complement %>
    </h2></p>

    <p class="mt-3"><h2>
    <strong>Bairro:</strong>
    <%= @person.district %>
    </h2></p>

    <p class="mt-3"><h2>
      <strong>Cep:</strong>
      <%= @person.zip %>
    </h2></p>

    <p class="mt-3"><h2>
      <strong>Cidade:</strong>
      <%= @person.city %>
    </h2></p>

    <h1 class="title mt-5 has-text-centered">Pets</h1>

    <div class="box ">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p>
              <table>
                <thead class="has-text-centered">
                  <th>Nome</th>
                  <th>Código</th>
                </thead>
                <tbody>
                  <% current_person.pet_registrations.each do |pet| %>
                    <tr class="table has-text-centered">
                      <td><h4><%= link_to pet.name, pet %></td></h4>
                      <td><h4><%= link_to pet.code, pet %></td></h4>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </p>
          </div>
        </div>
      </article>
  </div>
  <%= link_to "Cadastrar Amiguinho", new_pet_registration_url, class: "button is-info is-fullwidth" %>

  </div>

  <div class="column">

  </div>
</div




