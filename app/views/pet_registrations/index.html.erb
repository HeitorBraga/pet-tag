<section class="section">
  <div class="container">

  <div class="navbar-search navbar-item">
    <%= form_tag({ action: action_name }, method: 'GET') do %>
        <%= text_field_tag 'search', params['search'], placeholder: 'Digite o código ou nome do pet...', class: "input" %>
        <%= submit_tag  'Pesquisar', class: "is-info pt-1 pb-1 button" %>
    <% end %>
  </div>

    <h1 class="title has-text-centered">Pets</h1>
    <table class="mt-6 table is-fullwidth">
      <thead>
        <tr class="has-text-centered">
          <th>Code</th>
          <th>Nome</th>
          <th>Tipo</th>
          <th>Raça</th>
          <th>Nascimento</th>
          <th>Dono</th>
          <th width="135px"></th>
        </tr>
      </thead>

      <tbody>
        <% @pet_registrations.each do |pet_registration| %>
          <tr class="table has-text-centered">
            <td><%= pet_registration.code %></td>
            <td><%= pet_registration.name %></td>
            <td><%= pet_registration.kind %></td>
            <td><%= pet_registration.breed %></td>
            <td><%= pet_registration.birthdate %></td>
            <td><%= pet_registration.person.name %></td>
            <td>
              <%= link_to edit_pet_registration_path(pet_registration), class: "table-button" do %>
                <%= fa_icon "pencil" %>
              <% end %>
              <%= link_to pet_registration_url(pet_registration), class: "table-button" do %>
                <%= fa_icon "eye" %>
              <% end %>
              <%= link_to pet_registration_path(pet_registration), method: :delete, data: { confirm: "Tem certeza?" }, class: "table-button" do %>
                <%= fa_icon "trash" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to "Cadastrar Amiguinho", new_pet_registration_path, class: "button is-info is-fullwidth" %>
  </div>
</section>
