<!DOCTYPE html>

<html>
  <head>
    <title>Home</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbolinks-track": "reload" %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
  </head>

  <body>
  
  <div class="columns">
    <div class="column">    
      <nav class="navbar is-info" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
          <b class="logo mt-3 ml-4">Pet Tag | ADMIN  </b>
        </div>
          
        <div id="navbarBasicExample" class="navbar-menu">
          <div class="navbar-start">
          <% if person_signed_in? %>
            <a class="navbar-item mr-2 ml-2" href="/home">
              Home
            </a>
        
            <a class="navbar-item mr-2 ml-2" href="/people">
              Dono
            </a>

            <%= link_to pet_registrations_url, class: "navbar-item mr-2 ml-2" do %>
              Pet
            <% end %>

          <% else %>
            <a class="navbar-item mr-2 ml-2" href="/home">
              Home
            </a>
          <% end %>
          </div>

          <div class="navbar-end">
            <div class="navbar-item">
              <div class="buttons">
              <% if person_signed_in? %>
                <%= link_to "Sair", destroy_person_session_path, method: :delete, class: "button" %>
              <% else %>
                <%= link_to "Entrar", "people/sign_in", class: "button is-info" %>
                <%= link_to "cadastrar-se", "people/sign_up", class: "button" %>
              <% end %>
              </div>
            </div>
          <div>

        </div>
      </nav> 
    </div>
  </div>

    <%= yield %>

    <%= render partial: "layouts/footer" %>
  </body>
</html>